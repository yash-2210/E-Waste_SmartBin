<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/qr_code_white"
        android:orientation="vertical"
        android:padding="20dp"
        android:outlineAmbientShadowColor="@color/assColor"
        android:outlineSpotShadowColor="@color/assColor">

        <TextView
            android:id="@+id/thanku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/margin30"
            android:text="@string/thankyou"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/robot"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/qr_code_white" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="@string/string_msg"
            android:fontFamily="@font/robot"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
        <TextView
            android:id="@+id/binArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:gravity="center"
            android:fontFamily="@font/robot"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Bin Area"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
        <com.cooltechworks.views.ScratchTextView
            android:id="@+id/scratchCard"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="You Earned 10 Points"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/margin10"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/okayBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Okay"
                android:textSize="22dp"
                android:textColor="@color/fieldColor"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>