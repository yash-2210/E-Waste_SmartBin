<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.DashboardActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="@dimen/margin10">
            <TextView
                android:id="@+id/DashBoardTitle"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:fontFamily="@font/robot"
                android:text="@string/Dashboard"
                android:paddingTop="@dimen/margin10"
                android:textAlignment="center"
                android:textColor="@color/qr_code_white"
                android:textSize="35sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:textColor="@color/qr_code_white"
                android:textSize="16sp"
                android:paddingStart="@dimen/margin30"
                android:layout_gravity="bottom"
                android:paddingTop="@dimen/margin10"
                android:layout_marginBottom="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_email"
                android:textColor="@color/qr_code_white"
                android:textSize="16sp"
                android:paddingStart="@dimen/margin30"
                android:layout_gravity="bottom"
                android:paddingTop="@dimen/margin10"
                android:paddingBottom="@dimen/margin10"/>
            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:tint="@color/fieldColor"
                android:src="@drawable/ic_profile_primary"
                android:layout_marginEnd="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10"/>
            <ImageButton
                android:id="@+id/scanner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/logo"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginStart="@dimen/margin10" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPanel"
            app:cardCornerRadius="@dimen/margin30"
            app:contentPaddingTop="@dimen/margin30">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="70dp"
                    tools:context=".Activity.DashboardActivity" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>