<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.ProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp">
        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:fontFamily="@font/title_font"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin10"
            android:paddingBottom="@dimen/margin10"
            android:text="@string/profileTitle"
            android:paddingTop="@dimen/margin10"
            android:layout_marginStart="@dimen/margin30"
            android:textColor="@color/fontColor"
            android:textSize="35sp" />
        <ImageView
            android:id="@+id/profileDP"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_profile_primary"
            android:layout_marginEnd="@dimen/margin30"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/robot"
            android:textColor="@color/fieldColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userEmail"
            android:fontFamily="@font/robot"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/fieldColor"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="@dimen/margin10"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_below="@id/profileCard"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin10"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/margin10"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/editProfile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="25sp"
                android:paddingStart="@dimen/margin30"
                android:fontFamily="@font/title_font"
                android:textAlignment="textStart"
                android:background="@drawable/cardborder_shape"
                android:drawableEnd="@drawable/ic_leftarrow"/>
            <Button
                android:id="@+id/viewRewards"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/margin30"
                android:text="My Rewards"
                android:textAllCaps="false"
                android:background="@drawable/cardborder_shape"
                android:textAlignment="textStart"
                android:paddingStart="@dimen/margin30"
                android:textSize="25sp"
                android:fontFamily="@font/title_font"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:drawableEnd="@drawable/ic_leftarrow"/>
            <Button
                android:id="@+id/userGuide"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/margin30"
                android:text="User Guide"
                android:textAllCaps="false"
                android:background="@drawable/cardborder_shape"
                android:textAlignment="textStart"
                android:paddingStart="@dimen/margin30"
                android:textSize="25sp"
                android:fontFamily="@font/title_font"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:drawableEnd="@drawable/ic_leftarrow"/>

            <Button
                android:id="@+id/appInfo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/margin30"
                android:background="@drawable/cardborder_shape"
                android:drawableEnd="@drawable/ic_leftarrow"
                android:fontFamily="@font/title_font"
                android:paddingStart="@dimen/margin30"
                android:text="About and Feedback"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="22sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin30"
        android:layout_marginBottom="@dimen/margin30">

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/bottom_pannel"
            android:gravity="center"
            android:text="Logout"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:fontFamily="@font/title_font"
            android:textColor="@color/fontColor"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>
    <!--android:drawableEnd="@drawable/ic_logout"-->
    </RelativeLayout>
</layout>